<div class="usa-alert <%= modifier %>" <% if role %>role="<%= role %>"<% end %>>
  <div class="usa-alert__body">
    <% if text %><h4 class="usa-alert__heading"><%= heading %></h4><% end %>

    <div>
      <% if body %>
        <%= body %>
      <% else if text %>
        <p class="usa-alert__text"><%= text %></p>
      <% end %>
    </div>
  </div>
</div>