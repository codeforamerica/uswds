<div class="usa-alert<% if modifier %> <%= modifier %><% end %>"<% if role %> role="<%= role %>"<% end %><% if label %> aria-label="<%= label %>"<% end %><% if labelledby %> aria-labelledby="<%= labelledby %>"<% end %>>
  <div class="usa-alert__body">
    <% if heading %><h4 class="usa-alert__heading"<% if labelledby %> id="<%= labelledby %>"<% end %>><%= heading %></h4><% end %>

    <div>
      <% if body %>
        <%= body %>
      <% else text %>
        <p class="usa-alert__text"><%= text %></p>
      <% end %>
    </div>
  </div>
</div>