<div class="usa-form-group<% if defined?(modifier) %> <%= modifier %><% end %>"
  <% if defined?(id) %> id="<%= id %>"<% end %>>
  <label class="usa-label<% if label['modifier'] %> <%= label['modifier'] %><% end %>"<% if label['for'] %> for="<%= label['for'] %>"<% end %><% if label['tabindex'] %> tabindex="<%= label['tabindex'] %>"<% end %>>
    <span><%= label['text'] %></span>

    <% if defined?(input) && input['required'] %><abbr title="required" class="usa-hint usa-hint--required<% if label['modifierHint'] %> <%= label['modifierHint'] %><% end %>">*</abbr><% end %>

    <% if defined?(textarea) && textarea['required'] %><abbr title="required" class="usa-hint usa-hint--required<% if label['modifierHint'] %> <%= label['modifierHint'] %><% end %>">*</abbr><% end %>

    <% if defined?(selectEl) && selectEl['required'] %><abbr title="required" class="usa-hint usa-hint--required<% if label['modifierHint'] %> <%= label['modifierHint'] %><% end %>">*</abbr><% end %>
  </label>

  <% if defined?(hint) %><div class="usa-hint<% if hint['modifier'] %> <%= hint['modifier'] %><% end %>"<% if hint['id'] %> id="<%= hint['id'] %>"<% end %>><%= hint['text'] %></div><% end %>

  <% if defined?(error) %><span class="usa-error-message"<% if error['id'] %> id="<%= error['id'] %>"<% end %><% if error['role'] %> role="<%= error['role'] %>"<% end %><% if error['ariaLive'] %> aria-live="<%= error['ariaLive'] %>"<% end %>><%= error['text'] %></span><% end %>

  <% if defined?(input) %>
  <%= ERB.new(File.read('packages/cfa-input/_cfa-input.html.erb'), 0, 0, '@html').result(binding) %>
  <% end %>

  <% if defined?(textarea) %>
  <%= ERB.new(File.read('packages/cfa-textarea/_cfa-textarea.html.erb'), 0, 0, '@html').result(binding) %>
  <% end %>

  <% if defined?(selectEl) %>
  <%= ERB.new(File.read('packages/cfa-select/_cfa-select.html.erb'), 0, 0, '@html').result(binding) %>
  <% end %>
</div>