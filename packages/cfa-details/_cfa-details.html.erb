<details class="cfa-details<% if defined?(modifier) %> <%= modifier %><% end %>"<% if defined?(openAttr) %> open<% end %>>
  <% if defined?(summary) %><summary class="cfa-details__summary">
    <span><%= summary %></span><% if defined?(icon) %><svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
      <use href="<%= icon %>"></use>
    </svg><% end %>
  </summary><% end %>

  <% if defined?(body) %>
    <div class="cfa-details__content"><%= body %></div>
  <% elsif defined?(text) %>
    <div class="cfa-details__content"><p><%= text %></p></div>
  <% end %>
</details>